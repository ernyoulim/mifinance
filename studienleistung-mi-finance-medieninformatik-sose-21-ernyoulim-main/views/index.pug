extends layoutlogin

block content
  .container

    table.table.table-striped
      thead
        tr
          th(scope='col') Tickersymbol
          th(scope='col') Name
          th(scope='col') Anzahl Aktie
          th(scope='col') Price
          th(scope='col') Gesamt
      tbody
        tr
          each data, index in datas
            tr
              td #{data.symbol}
              td #{data.name}
              td #{data.count}
              td $#{latestPrices[index]}
              td $#{gesamts[index]}
          else
            td Keine Eintrage vorhanden
        tr
          td Cash:
          td
          td
          td
          td $#{money}
        tr
          td
          td
          td
          td
          td(style='color:black;font-weight:bold;') $#{total}
